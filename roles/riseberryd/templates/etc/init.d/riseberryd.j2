#!/bin/bash
# /etc/init.d/rise

### BEGIN INIT INFO
# Provides:          rise
# Required-Start:    $remote_fs $syslog
# Required-Stop:     $remote_fs $syslog
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# Short-Description: rise alarm clock
# Description:       This service is used to manage a rise instance
### END INIT INFO


case "$1" in 
    start)
        echo "Starting rise"
        nohup {{riseberryd_keepalive_path}} >> {{riseberryd_log_path}} 2>&1 &
        ;;
    stop)
        echo "Stopping rise"
        sudo pkill -9 -g $(ps -p $(pgrep -f {{riseberryd_bin_path}}) -o pgid=)
        ;;
    *)
        echo "Usage: /etc/init.d/rise start|stop"
        exit 1
        ;;
esac

exit 0
